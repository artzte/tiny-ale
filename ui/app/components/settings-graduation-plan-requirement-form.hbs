<form
  onsubmit={{action 'onSubmit'}}
  class="w-full lg:w-1/2 xl:w-1/3"
>
  <fieldset>
    <p>
      <FormInput @error={{this.errors.name}} @showError={{this.showErrors}} @label="Name">
        <input
          type="text"
          name="name"
          autofocus
          value={{this.pojo.name}}
          onchange={{fn this.onChange}}
        >
      </FormInput>
    </p>
    <p>
      <FormInput @label="Status">
        <TSelect
          name="status"
          @optionsList={{this.statusOptions}}
          @value={{this.pojo.status}}
          @onchange={{fn this.onChange}}
        />
      </FormInput>
    </p>
    <p>
      <FormInput @error={{this.errors.notes}} @showError={{this.showErrors}} @label="Notes">
        <textarea
          name="notes"
          value={{this.pojo.notes}}
          onchange={{fn this.onChange}}
        />
      </FormInput>
    </p>
    <p>
      <FormInput @label="Requirement type">
        <TSelect
          name="requirementType"
          @optionsList={{this.requirementTypeOptions}}
          @value={{this.requirementType}}
          @onchange={{action (mut this.pojo.requirementType)}}
        />
      </FormInput>
    </p>
  </fieldset>

  <fieldset>
    <p>
      <FormInput @error={{this.errors.parent}} @showError={{this.showErrors}} @label="Parent requirement">
        <TSelect
          name="parentId"
          @value={{this.relationships.parent.id}}
          @prompt="Select a requirement"
          @optionsList={{this.parentOptions}}
          @onchange={{action (mut this.relationships.parent.id)}}
        />
      </FormInput>
    </p>
  </fieldset>

  <TFormActionsRow @disabled={{this.disabled}}>
    <LinkTo @route="settings-graduation-plan-requirements" class="button">
      Cancel
    </LinkTo>
  </TFormActionsRow>
</form>
