<form onsubmit={{fn this.onSubmit}}>
  <fieldset>
    <p>
      <FormInput @error={{errors.name}} @showError={{showErrors}} @label="Category name">
        <input
          value={{pojo.name}}
          name="name"
          type="text"
          onchange={{action "onChange"}}
        >
      </FormInput>
    </p>
  </fieldset>
  <fieldset>
    <p>
      <FormInput @for="category-public">
        <input
          id="category-public"
          type="checkbox"
          name="public"
          checked={{pojo.public}}
          onchange={{action "toggleValue" "public"}}
        >
        Show in catalog?
      </FormInput>
    </p>
    <p>
      <FormInput @error={{errors.name}} @showError={{showErrors}} @label="Reporting">
        <TSelect
          name="reporting"
          @value={{pojo.reporting}}
          @optionsList={{reportingOptions}}
          @onchange={{action "onChange"}}
        />
      </FormInput>
    </p>
    <p>
      <FormInput @for="homeroom">
        <input
          id="homeroom"
          type="checkbox"
          name="homeroom"
          checked={{pojo.homeroom}}
          onchange={{action "toggleValue" "homeroom"}}
        >
        Homeroom?
      </FormInput>
    </p>
    <p>
      <FormInput @error={{errors.sequence}} @showError={{showErrors}} @label="Sequence group">
        <t-help>Use this number to group related categories together</t-help>
        <input
          type="number"
          name="sequence"
          value={{pojo.sequence}}
          onchange={{action "onChange"}}
        >
      </FormInput>
    </p>
  </fieldset>
  <TFormActionsRow @disabled={{disabled}}>
    <LinkTo @route="settings-contract-categories.index" class="button">
      Cancel
    </LinkTo>
  </TFormActionsRow>
</form>
