{{#check-empty count=assignments.length noResultsMessage="No assignments defined for this contract."}}
  <table class="t-table t-table-bordered">
    <thead>
      <tr>
        <th>Assignment</th>
        <th>Due</th>
        <th>Status</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedAssignments as |assignment|}}
        <StatusByEnrollmentAssignments::Row @enrollment={{enrollment}} @assignment={{assignment}} @notesHash={{notesHash}} @turninsByAssignment={{turninsByAssignment}} />
      {{/each}}
    </tbody>
  </table>
{{/check-empty}}

