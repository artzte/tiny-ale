<tr data-test-user-id={{this.user.attributes.id}} data-test-admin-users-list-row>
  <td data-test-user-name>
    <LinkTo @route="admin-user.edit" @model={{this.user.id}}>
      {{full-name this.user}}
    </LinkTo>
  </td>
  <td>
    {{titleize this.user.attributes.role}}
  </td>
  <td>
    {{titleize this.user.attributes.status}}
  </td>
  <td class="text-center">
    {{#if this.hasLogin}}
      <FaIcon @icon="check" data-test-has-login />
    {{/if}}
  </td>
  <td>
    <DateTime
      @date={{this.user.attributes.dateActive}}
      @format="MM-DD-YYYY"
    />
  </td>
  <td>
    <DateTime
      @date={{this.user.attributes.dateInactive}}
      @format={{"MM-DD-YYYY"}}
      @substitute="-"
    />
  </td>
  {{#if this.isStudent}}
    <td data-test-district-id>
      {{this.user.attributes.districtId}}
    </td>
    <td data-test-coordinator-name>
      {{full-name this.coordinator "first-last"}}
    </td>
    <td class="text-center" data-test-district-grade>
      {{this.user.attributes.districtGrade}}
    </td>
  {{else}}
    <td data-test-district-id>
      -
    </td>
    <td data-test-coordinator-name>
      -
    </td>
    <td class="text-center" data-test-district-grade>
      -
    </td>
  {{/if}}
</tr>
