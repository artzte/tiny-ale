<nav class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6" aria-label="Pagination">
  <div class="hidden sm:block">
    <p class="text-sm text-gray-700">
      Showing
      <span class="font-medium">
        {{numeric this.rangeStart}}
      </span>
      to
      <span class="font-medium">
        {{numeric this.rangeEnd}}
      </span>
      of
      <span class="font-medium">
        {{numeric this.totalCount}}
      </span>
      results
    </p>
  </div>
  {{#unless this.hidePrevNextControls}}
    <div class="flex-1 flex justify-between sm:justify-end" data-test-prev-next>
      <LinkTo
        @route={{this.router.currentRouteName}}
        @query={{this.prevQuery}}
        @disabled={{this.prevDisabled}}
        class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
      >
        Previous
      </LinkTo>

      <LinkTo
        @route={{this.router.currentRouteName}}
        @query={{this.nextQuery}}
        @disabled={{this.nextDisabled}}
        class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
      >
        Next
      </LinkTo>
    </div>
  {{/unless}}
</nav>
