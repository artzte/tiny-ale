<tr
  data-test-credit-id={{creditAssignment.id}}
  data-test-credit-item
>
  <td class="align-center">
    <input
      type="checkbox"
      checked={{selected}}
      onchange={{action "selectCredit"}}
      disabled={{selectionDisabled}}
    >
  </td>
  <td>
    <TLink
      class="no-underline-not-working"
      @action={{action "selectCredit"}}
    >
      {{courseName}}
    </TLink>
    {{#if hasChildren}}
      <CreditAssignments
        @creditAssignments={{childCreditAssignments}}
      />
    {{/if}}
    <NotesList
      @notes={{notes}}
      @notable={{creditAssignment}}
      @expanded={{true}}
    />
  </td>
  <td>
    {{term.attributes.name}}
  </td>
  <td class="text-right">
    {{creditHours}}
  </td>
  <td class="text-right">
    <DateTime @date={{creditAssignment.attributes.enrollmentFinalizedOn}} @format="M/D/YYYY" />
  </td>
  <td
    class="text-right"
    title={{creditAssignment.attributes.districtFinalizeApprovedBy}}
  >
    <DateTime @date={{creditAssignment.attributes.districtFinalizeApprovedOn}} @format="M/D/YYYY" />
  </td>
  <td>
    {{#if showSplit}}
      <button
        data-test-split-link
        class="button"
        type="button"
        {{action "splitCredit"}}
      >
        <FaIcon @icon="columns" />
        Split
      </button>
    {{/if}}
    {{#if showApproveForTransmittal}}
      <button
        data-test-approve-link
        class="button"
        type="button"
        {{action "approveCredit"}}
      >
        {{#if isApproved}}
          <FaIcon @icon="times" data-test-district-unapprove class="text-red-700 mr-2" />
          Un-approve
        {{else}}
          <FaIcon @icon="check" data-test-district-approve class="text-green-700 mr-2" />
          Approve
        {{/if}}
      </button>
    {{/if}}
  </td>
</tr>
