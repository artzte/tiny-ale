<div class="bg-white pt-4 pb-6">
  <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
    <div>
      {{#unless disabled}}
        <a
          href="#"
          class="action-icon add-note text-gray-700 hover:text-gray-800"
          onClick={{action "doAdd"}}
        >
          <FaIcon @icon="plus" @prefix="fal" />
          Add a note
        </a>
      {{/unless}}
    </div>
    <div class="markdown-container mt-6 grid gap-4 lg:gap-8 lg:grid-cols-2">
      {{#each sortedNotes as |note|}}
        <NotesList::Item
          @note={{note}}
          @expanded={{true}}
        />
      {{/each}}
    </div>
  </div>
</div>
