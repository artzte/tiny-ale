<li data-test-credit-assignment-id={{creditAssignment.id}}>
  <TLink
    @action={{editCreditAssignment}}
    @disabled={{disabled}}
  >
    {{courseName}} ({{credit.attributes.courseId}})
    /
    {{hours}}
  </TLink>
  {{#if creditAssignment.attributes.overrideBy}}
    <note
      title="was {{creditAssignment.attributes.creditHours}}; by {{creditAssignment.attributes.overrideBy}}"
    >
      (O)
    </note>
  {{/if}}
  {{yield
    (hash
      creditAssignment=creditAssignment
      credit=credit
    )
  }}
</li>