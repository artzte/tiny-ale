<select
  ...attributes
  onchange={{fn this.onChange}}
  onclick={{fn this.onClick}}
>
  {{#if hasBlock}}
    {{yield
      (hash
        option=(component "t-select-option" select=this)
      )
    }}
  {{else}}
    {{#if @prompt}}
      <TSelect::Option @name={{@prompt}} @value="" @currentValue={{@value}} />
    {{/if}}
    {{#each optionSelections as |opt|}}
      <TSelect::Option @name={{opt.name}} @value={{opt.value}} @currentValue={{@value}} />
    {{/each}}
  {{/if}}
</select>