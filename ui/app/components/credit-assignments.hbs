{{#unless this.disabled}}
  <TLink
    @action={{action "showEdit" this.creditable}}
  >
    +
  </TLink>
{{/unless}}
{{#check-empty
  count=this.creditAssignments.length
  noResultsMessage="No credits assigned"
}}
  <ul class="list-reset credit-assignments">
    {{#each this.creditAssignmentsList as |creditAssignment|}}
      <CreditAssignments::Item
        @creditAssignment={{creditAssignment}}
        @editCreditAssignment={{action "showEdit" this.creditable creditAssignment}}
        @disabled={{this.disabled}}
        as |cai|
      >
        {{yield 
          (hash
            creditAssignment=creditAssignment
            credit=cai.credit
            disabled=this.disabled
          )
        }}
      </CreditAssignments::Item>
    {{/each}}
  </ul>
{{/check-empty}}

{{#if this.showDialog}}
  <ModalDialog
    @containerClass="pointer-events-auto w-full md:w-1/2 xl:w-1/3"
    @translucentOverlay={{true}}
    @overlayClass="pointer-events-none"
  >
    <div class="w-full">
      <CreditAssignments::CreateEditDialog
        @model={{this.editCreditAssignment}}
        @creditable={{this.editCreditable}}
        @searchCredits={{action "searchCredits"}}
        @save={{action "saveCreditAssignment" target=this}}
        @saveCreditAssignmentError={{this.saveCreditAssignmentError}}
        @close={{action (mut this.showDialog) false}}
      />
    </div>
  </ModalDialog>
{{/if}}