<Table>
  <thead>
    <tr>
      <th class="class">Class</th>
      <th class="status">Status</th>
      {{#each this.months as |month|}}
        <th class="month"><DateTime @date={{month}} @format="MMM" /></th>
      {{/each}}
    </tr>
  </thead>

  {{#each this.enrollmentsList as |enrollment|}}
    <StatusByStudentEnrollments::Row @enrollment={{enrollment}} @statusHash={{this.statusHash}} @notablesHash={{this.notablesHash}} @months={{this.months}} />
  {{/each}}
</Table>