<div>
  <p class="text-sm text-gray-500">
    <DateTime @date={{@note.attributes.updatedAt}} @format= "MMM dd, YYYY" />
  </p>
  <a href="#" class="mt-2 block text-gray-500">
    <p class="text-xl font-semibold text-gray-900">
      {{full-name this.creator "first-last"}} - : {{@note.attributes.title}}
    </p>
    <p class="mt-3 text-base text-gray-500">
      {{@note.attributes.note}}
    </p>
  </a>
  <div class="mt-3">
    <a href="#" class="text-base font-semibold text-indigo-600 hover:text-indigo-500">
      Read full story
    </a>
  </div>
</div>

<span class="notes-list-item-header">
  {{full-name creator "first-last"}} - <DateTime @date={{note.attributes.updatedAt}} @format= "DD MMM YY" />: {{note.attributes.title}}
</span>

