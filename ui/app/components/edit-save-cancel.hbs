  <button
    data-button="edit"
    type="button"
    class="ml-12 btn btn-small"
    {{on 'click' (fn @edit)}}
    disabled={{@isEditing}}
  >
    Edit
  </button>
  {{#if @isEditing}}
    <button
      data-button="save"
      type="submit"
      class="btn btn-small"
      disabled={{@disabled}}
    >
      Save
    </button>
    <button
      data-button="cancel"
      type="button"
      class="btn btn-small"
      {{on 'click' (fn @cancel)}}
      disabled={{@disabled}}
    >
      Cancel
    </button>
  {{/if}}