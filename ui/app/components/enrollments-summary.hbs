<div
  {{did-update this.checkYearEnrollments @year}}
>
  <h2>{{@year}} Enrollments</h2>

  {{#if this.yearEnrollments}}
    <CheckEmpty
      @noResultsMessage="No enrollments for this school year"
      @result={{this.yearEnrollments}}
    >
      <EnrollmentsSummary::Table
        data-test-enrollments-summary-table
        class="w-full l:w-4/5 xl:w-3/5"
        @title="Active enrollments"
        @enrollments={{this.activeEnrollments}}
        @showStatus={{@showStatus}}
      />
      <EnrollmentsSummary::Table
        class="w-full l:w-4/5 xl:w-3/5"
        @title="Completed enrollments"
        @enrollments={{this.inactiveEnrollments}}
        @showStatus={{@showStatus}}
      />
    </CheckEmpty>
  {{else}}
    <p>Loading enrollments...</p>
  {{/if}}
</div>