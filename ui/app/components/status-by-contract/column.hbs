<td data-test-month={{month}} data-test-status-id={{status.id}}>
  {{#if showStatus}}
    <LinkTo class="{{if isException "text-red-500"}}" @route="status-by-enrollment" @model={{enrollment.id}} @query={{hash month=month}}>
      {{statusAbbreviation}}
      {{#if status}}
        {{#if status.attributes.metFteRequirements}}
          M
        {{else}}
          U
        {{/if}}
      {{/if}}
    </LinkTo>
  {{/if}}
</td>
