<ContractAttendanceRoll::SetAll @updateAllRolls={{action "updateAllRolls"}} />
<table class="t-table t-table-bordered">
  <thead>
    <th>Student</th>
    <th>Meeting type</th>
    <th>Present</th>
    <th>Tardy</th>
    <th>Absent</th>
    <th>Excused</th>
    <th>Notes</th>
  </thead>
  <tbody>
    {{#each activeParticipants as |participant|}}
      <ContractAttendanceRoll::Row @enrollment={{participant.enrollment}} @meeting={{meeting}} @notesHash={{notesHash}} @meetingParticipantHash={{meetingParticipantHash}} @student={{participant.student}} @updateRoll={{updateRoll}} />
    {{/each}}
  </tbody>
</table>