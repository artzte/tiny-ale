<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-5">
  <div class="px-4 my-5 sm:px-6">
    <h3 class="text-lg leading-6 font-bold text-gray-900">
      {{t-date @month "termMonth"}}
    </h3>
  </div>
  <div class="border-t border-gray-200 px-4 my-5 sm:m-0">
    <dl class="sm:divide-y sm:divide-gray-200">
      {{#if this.status}}
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-bold text-gray-900" data-test-academic >
            Academic
          </dt>
          <dd class="mt-1 text-gray-900 sm:mt-0 sm:col-span-2">
            {{titleize status.attributes.academicStatus}}
          </dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-bold text-gray-900" data-test-attendance >
            Attendance
          </dt>
          <dd class="mt-1 text-gray-900 sm:mt-0 sm:col-span-2">
            {{this.academic}}
          </dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-bold text-gray-900">
            Met FTE requirements
          </dt>
          <dd class="mt-1 text-gray-900 sm:mt-0 sm:col-span-2">
            {{#if status.attributes.metFteRequirements}}
              Yes
            {{else}}
              No
            {{/if}}
          </dd>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-medium text-gray-900">
            <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Edit status for {{t-date @month "termMonth"}}
            </button>
          </dt>
        </div>
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-bold text-gray-900">
            Notes
          </dt>
          <dd class="mt-1 text-gray-900 sm:mt-0 sm:col-span-2">
            <NotesList
              class="notes-row w-full md:w-1/2 {{loadingNotes}}"
              @notes={{notes}}
              @notable={{status}}
            />
          </dd>
        </div>
      {{else}}
        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="font-medium text-gray-900">
            <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              Report status for {{t-date @month "termMonth"}}
            </button>
          </dt>
        </div>
      {{/if}}
    </dl>
  </div>
</div>



<tr data-test-month={{month}}>
  <td>
    {{t-date month "MMM YYYY"}}
  </td>
  {{#if status}}
    <td data-test-ale class="center">
      {{#if status.attributes.metFteRequirements}}
        <FaIcon @icon="check" data-test-ale-met />
      {{else}}
        <FaIcon @icon="times" data-test-ale-unmet />
      {{/if}}
    </td>
  {{else}}
    {{status-missing isActiveMonth}}
    {{status-missing isActiveMonth}}
    {{status-missing isActiveMonth}}
  {{/if}}

</tr>