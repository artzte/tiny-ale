<h2>Components</h2>
<form onsubmit={{this.submit}}>
  <fieldset>
    {{#form-input label="Typeahead single select"}}
      <TTypeAhead
        @name="typeahead-single"
        @prompt="Search for a mountain"
        @value={{brokenTop}}
        @autofocusInput={{true}}
        @onSearch={{searchMountains}}
        @onChange={{selectMountain}}
        @results={{searchMountainsResults}}
      />
    {{/form-input}}
  </fieldset>

  <fieldset>
    {{#form-input label="Typeahead multi select"}}
      <TTypeAhead
        @name="typeahead-multiple"
        @prompt="Search for mountains"
        @value={{sistersAndBachelor}}
        @multiselect={{true}}
        @onSearch={{searchMountains}}
        @onChange={{selectMountains}}
        @results={{searchMountainsResults}}
      />
    {{/form-input}}
  </fieldset>

  <p>Mountains: {{mountainNames}}</p>
</form>
