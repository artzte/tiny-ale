<p>
  <LinkTo @route="settings-graduation-plan-requirements.new" class="btn">
    Add a requirement
  </LinkTo>
</p>

<ul class="filter">
  <li class="filter-item" data-test-status>
    <TSelect
      @optionsList={{statusOptions}}
      @value={{status}}
      name="status"
      @onchange={{action (mut status)}}
    />
  </li>
</ul>

{{#check-empty
  count=countOfStatus
  noResultsMessage="No graduation plan requirements were found"
}}
  <CountParagraph @count={{countOfStatus}} @name="requirement" />

  <h3>Credit requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="credit" @status={{status}} />

  <h3>General requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="general" @status={{status}} />

  <h3>Service requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="service" @status={{status}} />
{{/check-empty}}