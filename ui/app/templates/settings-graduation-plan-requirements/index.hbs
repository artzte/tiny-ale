<p>
  <LinkTo @route="settings-graduation-plan-requirements.new" class="button">
    Add a requirement
  </LinkTo>
</p>

<ul class="filter">
  <li class="filter-item" data-test-status>
    <TSelect
      @optionsList={{this.statusOptions}}
      @value={{this.status}}
      name="status"
      @onchange={{action (mut this.status)}}
    />
  </li>
</ul>

{{#check-empty
  count=this.countOfStatus
  noResultsMessage="No graduation plan requirements were found"
}}
  <Pagination
    @totalCount={{this.countOfStatus}}
    @singularName="requirement"
  />

  <h3>Credit requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{this.graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="credit" @status={{this.status}} />

  <h3>General requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{this.graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="general" @status={{this.status}} />

  <h3>Service requirements</h3>
  <GraduationPlanRequirementsList @graduationPlanRequirements={{this.graduationPlanRequirements}} @updateSeries={{action "updateSeries"}} @requirementType="service" @status={{this.status}} />
{{/check-empty}}