<p>
  <TSelect
    @optionsList={{this.categories}}
    @onchange={{action (mut this.category)}}
    name="category"
    @value={{this.category}}
    @prompt="All categories"
  />
</p>

<LinkTo
  class="button"
  @route="settings-learning-requirements.new"
>
  Add a learning requirement
</LinkTo>

<CheckEmpty
  @count={{this.categoryLearningRequirements.length}}
  @noResultsMessage="No entries in this category"
>
  <Pagination
    @totalCount={{this.categoryLearningRequirements.length}}
    @singularName="learning requirement"
  />
  <Table data-test-settings-learning-requirement-list>
    <thead>
      <tr>
        <th>Sequence</th>
        <th>Category</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each this.categoryLearningRequirements as |learningRequirement|}}
        <tr>
          <td>
            {{learningRequirement.attributes.seq}}
          </td>
          <td>
            {{learningRequirement.attributes.category}}
          </td>
          <td>
            {{learningRequirement.attributes.learningRequirement}}
          </td>
          <th class="text-right">
            <LinkTo
              @route="settings-learning-requirements.edit"
              @model={{learningRequirement}}
            >
              Edit
            </LinkTo>
            <button
              class="link-button"
              type="button"
              onclick={{action 'deleteLearningRequirement' learningRequirement}}
            >
              Delete
            </button>
          </th>
        </tr>
      {{/each}}
    </tbody>
  </Table>
</CheckEmpty>

{{#if this.showDialog}}
  <ModalDialog>
    <h3>Delete {{this.learningRequirement.attributes.category}} {{this.learningRequirement.attributes.seq}}</h3>
    <p>Are you sure you want to delete this?</p>
    <footer>
      <button
        class="button"
        onclick={{action "confirmDelete" this.learningRequirement}}
        type="submit"
      >
        Delete
      </button>
      <button
        type="button"
        onclick={{action "cancelDelete"}}
      >
        Cancel
      </button>
    </footer>
  </ModalDialog>
{{/if}}
