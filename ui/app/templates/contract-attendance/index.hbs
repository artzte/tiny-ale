<p>
  <button
    class="button"
    onclick={{action "toggleNew"}}
    type="button"
  >
    Take attendance
  </button>
</p>

{{#if this.showNew}}
  <ModalDialog @onClose={{action "toggleNew"}} @translucentOverlay={{true}}>
    <ContractAttendanceNew @meetings={{this.meetings}} @today={{this.today}} @createMeeting={{action "createMeeting"}} />
  </ModalDialog>
{{/if}}

<CheckEmpty
  @count={{this.model.meta.count}}
  @noResultsMessage="No attendance taken as of yet"
>
  <Pagination
    @totalCount={{this.model.meta.count}}
    @singularName="meeting"
  />
  <ContractAttendanceList
    @contract={{this.contract}}
  />
</CheckEmpty>